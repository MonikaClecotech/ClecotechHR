  <!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-2 text-gray-800">Employees</h1>

  <%= link_to new_user_path, class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" do %>
    <i class="fas fa-user fa-sm text-white-50"> New Employee </i>
  <% end %>
</div>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Employee ID</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
              <tbody>  
                <% User.all.each_with_index do |user, index| %>
                      <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td><%= user.try(:name) %></td>
                        <td><%= user.try(:email) %></td>
                        <td><%= user.try(:employee_id) %></td>
                        <td style="width: 330px;">
                            <%= link_to "View", user_path(user) ,class: "btn btn-primary" %>
                            <%= link_to "Attendence",user_time_logs_path(:user => user.id) ,class: "btn btn-success" %>
                            <%= link_to "Edit",edit_user_path(user) ,class: "btn btn-info" %>
                            <%= link_to "Destroy",user_path(user),data: {:confirm => 'Are you sure?'}, :method => :delete ,class: "btn btn-danger" %>
                        </td>
                      </tr>
                <% end %>
              </tbody>
        </table>
      </div>
    </div>
  </div>