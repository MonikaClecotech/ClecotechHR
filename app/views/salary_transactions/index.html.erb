<main class="page-content">
  <div class="container-fluid">
    <div class="row">
      <div class="form-group col-md-12">
        <div class= "container">
        <h3>Salary Transaction</h3>
         <%= link_to "New Salary Transaction", new_organization_salary_transaction_path(Organization.first), class: "btn btn-success" %><br/><br/>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Month</th>
                  <th scope="col">Year</th>
                  <th scope="col">Salary</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
            <% SalaryTransaction.all.each_with_index do |salary_transaction, index| %>
                <tbody>  
                  <tr>
                    <th scope="row"><%= index+1 %></th>
                    <td><%= salary_transaction.try(:month) %></td>
                    <td><%= salary_transaction.try(:year) %></td>
                    <td><%= salary_transaction.employee_salaries.sum(:salary_amount) %></td>
                    <td><%= link_to "Download", generate_salary_transaction_path(salary_transaction), class: "btn btn-success btn-" %></td>
                  </tr>
                </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
        </div>
     </div>
   </div>
 </div>              
</main>