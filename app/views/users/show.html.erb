<main class="page-content">
  <div class="container-fluid">
    <div class="row">
      <div class="form-group col-md-12">
        <div class= "container">
        <h3>Profile</h3>
          <div class="card" style="width: 22rem;">
            <%= image_tag "new_hr.jpg",class: "card-img-top", alt: "Card image cap" %>
            
            <div class="card-body">
              <h5 class="card-title"><b><%= @user.try(:name) %></b></h5>
              <p class="card-text">
                Employee code: <%= @user.try(:employee_id) %><br/>
                Email: <%= @user.try(:email) %><br/>
                <% if @user.id != current_user.id %>
                    Account Number: <%= @user.account.try(:account_no) %><br/>
                    bank ifsc code: <%= @user.account.try(:ifsc) %>
                  </p>
                   <%= link_to "Attendence", user_time_logs_path(:user => @user.id) ,class: "btn btn-success" %>
                <% else %>
                  </p>
                <% end %>
            </div>
          </div>
        </div>
     </div>
   </div>
 </div>              
</main>
